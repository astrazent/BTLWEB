<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List User</title>
    <style>
        /* Add a black background color to the top navigation */
        *{
        margin: 0;
        padding: 0;
        }
        .topnav {
        background-color: #333;
        overflow: hidden;
        }

        /* Style the links inside the navigation bar */
        .topnav a {
        float: left;
        color: #f2f2f2;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
        }

        /* Change the color of links on hover */
        .topnav a:hover {
        background-color: #ddd;
        color: black;
        }

        /* Add a color to the active/current link */
        .topnav a.active {
        background-color: #04AA6D;
        color: white;
        }

        form{
        width: 500px;
        margin: 0 auto;
        padding-top: 200px;
        }
        table {
        border-collapse: collapse;
        width: 100%;
        }

        th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        }

        tr:hover {background-color: coral;}
    </style>
</head>
<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="list" class="active" >News</a>
    </div>
        <div style="font-size: x-large; font-weight: 800;">List Users</div>
        <table>
        <tr>
        <th>ID</th>
        <td>First Name</td>
        <td>Last Name</td>
        <td>Address</td>
        <td>City</td>
        </tr>
        <% listUsers.forEach(function(student) { %>
            <tr>
                <th>
                    <%= student.PersonID %>
                </th>
                <td>
                    <%= student.FirstName %>
                </td>
                <td>
                    <%= student.LastName %>
                </td>
                <td>
                    <%= student.Address %>
                </td>
                <td>
                    <%= student.City %>
                </td>
                <td>
                    <a href="/update/<%= student.PersonID %>">Edit</a>
                </td>
            </tr>
        <% }); %> 
    </table>
</body>
</html>